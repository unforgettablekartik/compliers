# Notion Configuration (for blog functionality)
NOTION_TOKEN=your_notion_integration_secret
NOTION_DATABASE_ID=your_notion_database_id

# SMTP Configuration (for contact form API)
# Note: These are required for the /api/contact endpoint to send emails

# SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net, smtp-mail.outlook.com)
SMTP_HOST=smtp.example.com

# SMTP server port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username/email for authentication
SMTP_USER=your_email@example.com

# SMTP password or API key
# For Gmail: use App Passwords (https://myaccount.google.com/apppasswords)
# For SendGrid/other services: use your API key
SMTP_PASS=your_password_or_api_key

# Email address to send from (should match SMTP_USER or be authorized)
SMTP_FROM=noreply@yourdomain.com

# EmailJS Configuration (for Compliers Bot)
# Sign up at https://www.emailjs.com/ to get these credentials
# Note: These need to be prefixed with NEXT_PUBLIC_ to be accessible in the browser

# EmailJS Service ID
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id

# EmailJS Template ID
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# EmailJS Public Key
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# WhatsApp Number (for Compliers Bot)
# Format: country code + number without + or spaces (e.g., 919540101740 for India)
NEXT_PUBLIC_WHATSAPP_NUMBER=919540101740

# OpenAI Configuration (for RiskOMeter contract analysis)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
